{
  "openapi": "3.0.0",
  "info": {
    "title": "Universities Monitor",
    "version": "1.0.0"
  },
  "servers": [{ "url": "http://localhost:3000/" }],
  "paths": {
    "/universities": {
      "post": {
        "summary": "Registre an University",
        "description": "This route registres a new university",
        "tags": ["university"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/University"
              },
              "examples": {
                "university": {
                  "value": {
                    "state_province": null,
                    "domains": ["claeh.edu.uy"],
                    "country": "Uruguay",
                    "web_pages": ["http://www.claeh.edu.uy/"],
                    "name": "Insituto Universitario - Centro Latinoamericano de Economia Humana - IU Claeh",
                    "alpha_two_code": "UY"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/University"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/universities/{universityId}": {
      "get": {
        "summary": "Get an university by id",
        "description": "this route gets an university by its id",
        "tags": ["university"],
        "parameters": [
          {
            "name": "universityId",
            "in": "path",
            "required": true,
            "example": "64130cfd81890e8d9b58581d"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/University"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "university not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/universities/": {
      "get": {
        "summary": "Get an university by id",
        "description": "this route gets an university by its id",
        "tags": ["university"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "required": true,
            "example": 1
          },
          {
            "name": "country",
            "in": "query",
            "required": false,
            "example": "brazil"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/University"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/universities/{universityToBeUpdatedId}": {
      "put": {
        "summary": "Get an university by id",
        "description": "this route gets an university by its id",
        "tags": ["university"],
        "parameters": [
          {
            "name": "universityToBeUpdatedId",
            "in": "path",
            "required": true,
            "example": "64130cfd81890e8d9b58581d"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "web_pages": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "nullable": true
                  },
                  "name": {
                    "type": "string",
                    "nullable": true
                  },
                  "domains": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "nullable": true
                  }
                }
              },
              "examples": {
                "university": {
                  "value": {
                    "domains": ["claeh.edu.uy"],
                    "web_pages": ["http://www.claeh.edu.uy/"],
                    "name": "Insituto Universitario - Centro Latinoamericano de Economia Humana - IU Claeh"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/University"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "university not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/universities/{universityToBeDeletedId}": {
      "delete": {
        "summary": "Get an university by id",
        "description": "this route gets an university by its id",
        "tags": ["university"],
        "parameters": [
          {
            "name": "universityToBeDeletedId",
            "in": "path",
            "required": true,
            "example": "64130cfd81890e8d9b58581d"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "items": {
                    "$ref": "#/components/schemas/University"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "university not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "University": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "state_province": {
            "type": "string",
            "nullable": true
          },
          "domains": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "country": { "type": "string" },
          "web_pages": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "alpha_two_code": {
            "type": "string"
          }
        }
      }
    }
  }
}
